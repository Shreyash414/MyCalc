<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1BBBB">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/displaycard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical"
            android:padding="24dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:maxLines="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:maxLines="1"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/displaycard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        android:layout_margin="16dp"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="4"
            android:padding="16dp">

            <Button
                android:id="@+id/btnclear"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:background="@drawable/button_clear_background"
                />
            <Button
                android:id="@+id/btndelete"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="D"
                android:background="@drawable/button_operator_background"
                />
            <Button
                android:id="@+id/btnpercent"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="%"
                android:background="@drawable/button_operator_background"/>
            <Button
                android:id="@+id/btndivide"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="/"
                android:background="@drawable/button_operator_background"
                />
            <Button
                android:id="@+id/btn1"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn2"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn3"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btnmultiply"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="*"
                android:background="@drawable/button_operator_background"
                />
            <Button
                android:id="@+id/btn4"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn5"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn6"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btnsubtract"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:background="@drawable/button_operator_background"
                />
            <Button
                android:id="@+id/btn7"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn8"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btn9"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btnadd"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:background="@drawable/button_operator_background"
                />
            <Button
                android:id="@+id/btn0"
                style="@style/CalculatorButton"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:text="0"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btndot"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="."
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/btnequal"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:background="@drawable/button_equal_background"
                />




        </GridLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>